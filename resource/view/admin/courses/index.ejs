<div class="d-flex justify-content-between align-items-center mb-3 border-bottom-1">
	<h2>دوره ها</h2>
	<div class="btn-group">
		<a href="/admin/courses/create" class="btn btn-sm btn-primary">ایجاد دوره جدید</a>
		<a href="/admin/episodes" class="btn btn-sm btn-danger">بخش ویدیوها</a>
	</div>
</div>
<div class="table-responsive">
	<table class="table table-striped table-bordered">
		<thead>
			<tr>
				<th>عنوان مقاله</th>
				<th>تعداد نظرات</th>
				<th>مقدار بازدید</th>
				<th>تعد شرکت کننده ها</th>
				<th>وضعیت دوره</th>
				<th>تنظیمات</th>
			</tr>
		</thead>
		<tbody>
				<% courses.docs.forEach(course => { %>
			<tr>
				<td><a href="http://localhost:3000/courses/<%= course.title %>"><%= course.title %> </a></td>
				<td><%= course.commentCount %></td>
				<td><%= course.viewCount %> </td>
				<td><%= course.title %></td>
				<td>
					<%= course.typeToPersian() %> 
				</td>
				<td>
					<form action="/admin/courses/<%= course._id %>?_method=DELETE" method="POST">
						<input type="hidden" name="_method" value="delete">
						<input type="hidden" name="_token" value="Dso45XzqoXsAkRC8BBMQ63ZsOFS0c2tELkxR4i3Y">
						<div class="btn-group btn-group-sm">
							<a href="/admin/courses/<%= course._id %>/edit" class="btn btn-primary">ویرایش</a>
							<button type="submit" class="btn btn-danger">حذف</button>
						</div>
					</form>
				</td>
			</tr>
		<% }); %>
		</tbody>
	</table>
		<%- include(viewPath("layout/pagination"), {pagination: courses}); %> 
</div>